{
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "globals": {
        "__dirname": "readonly",
        "__filename": "readonly"
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest"
    ],
    "rules": {
        "indent": ["warn", 4],
        "n/no-callback-literal": "off"
    }
}
